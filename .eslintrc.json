{
  "root": true,
  "ignorePatterns": [
    "node_modules",
    "build",
    "vite.config.ts"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": "love",
  "rules": {
    "semi": ["off"],
    "@typescript-eslint/strict-boolean-expressions": ["off"],
    "@typescript-eslint/consistent-type-definitions": ["off"],
    "@typescript-eslint/brace-style": ["error", "stroustrup"]
  }
}
